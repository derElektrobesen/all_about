nginx configuration:

server {
    listen 127.0.0.1:80;

    access_log /var/log/nginx/all_about_access.log;
    error_log /var/log/nginx/all_about_error.log;

    server_name allabout;
    ssi on;
    gzip on;

    location / {
        root /home/pavel/projects/all_about/frontend;
        index index.htm index.html;
    }

    location ~ ^/cgi-bin/.*\.cgi$ {
        fastcgi_pass unix:/var/run/all_about.sock;
        include /etc/nginx/fastcgi.conf;
    }

	error_page  404               /404.html;
	error_page  500 502 503 504   /50x.html;

	location = /404.html {
		root   /usr/share/nginx/html;
	}
	location = /50x.html {
		root   /usr/share/nginx/html;
	}
}

syslog-ng configuration:


template t_fcgi_st { template("$DATE $PROGRAM [$PID] [$LEVEL] $MSGONLY\n"); };
destination d_fcgi_st { file("/var/log/fcgi_starter.log" template(t_fcgi_st)); };
filter f_fcgi_st { level(debug..emerg) and match("all_about" value("PROGRAM")); };
log { source(src); filter(f_fcgi_st); destination(d_fcgi_st); }; 
