<script type='text/template' id='src-messages'>

<form class="form-horizontal">
<fieldset>

<legend>Messages</legend>
<br>

    <% console.log(messages); %>

<% if (logged_in) { messages.map(function (message) { %>
    <div class="row">
        <% var p_type = "success";
           if (message.from_me == "1") {
               p_type = "info"; %>
               <div class="col-md-3"></div>
        <% } %>
        <div class="col-md-9">
            <div class="<%= 'panel panel-' + p_type %>">
                <div class="panel-heading">
                    <span class="panel-title"><b>
                        <%= message.from_me == "1" ? "To: " + message.to : "From: " + message.from %>
                    </b></span>
                    <span class="pull-right">Date: <%= message.time %></span>
                </div>
                <div class="panel-body"><%= message.msg %></div>
            </div>
        </div>
    </div>
<% }); %>
    <div class="col-md-1"><span>To:</span></div>
    <div class="col-md-3">
        <select class="form-control" id="sel-user">
            <% users.map(function (user) { %>
                <option><%= user %></option>
            <% }); %>
        </select>
    </div>
    <div class="col-md-8">
        <div class="input-group">
            <input type="text" class="form-control" id="edt-message">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button" id="btn-send_message">Send</button>
            </span>
        </div>
    </div>
<br><br>
<% } %>
</fieldset>
</form>

</script>
