<script type='text/template' id='src-cur_usr_info'>
<form class="form-horizontal">
<fieldset>

<legend>User informaition</legend>

<% if (logged_in) {
    if (error) { %>
        <div class="alert alert-danger" role="alert"> <strong>Error!</strong> <%= error %> </div>
<% } else { %>

<div class="table-responsive">
  <table class="table table-striped">
    <tr><td>Login:</td><td><%= username %></td></tr>
    <tr><td>Email:</td><td><%= email %></td></tr>
    <tr><td>Name:</td><td><%= name %></td></tr>
    <tr><td>Surname:</td><td><%= surname %></td></tr>
    <tr><td>Lastname:</td><td><%= lastname %></td></tr>
  </table>
</div>
<button type="button" class="btn btn-default btn-sm pull-right" id='btn_logout'>Logout</button><br>
<% } } else { %>

<h2>Need to <a href="#login">login</a></h2>

<% } %>

<div class="pre-footer"></div>
</script>
